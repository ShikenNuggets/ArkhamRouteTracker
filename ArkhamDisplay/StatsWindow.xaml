<Window
    x:Class="ArkhamDisplay.StatsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ArkhamDisplay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Route Tracker Stats"
    Width="750"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Name="PercentageLabel"
            Width="Auto"
            Height="120"
            MaxWidth="800"
            Margin="10,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontSize="100"
            Text="0.0%" />
        <TextBlock
            Name="RiddleLabel"
            Width="Auto"
            Height="120"
            MaxWidth="800"
            Margin="36,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="100"
            Text="" />
        <TextBlock
            Name="ExtraLabel"
            Width="Auto"
            Height="120"
            MaxWidth="800"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            FontSize="100"
            Text="" />
    </Grid>
</Window>
